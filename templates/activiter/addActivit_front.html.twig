
{% extends 'base.html.twig' %}

{% block title  %} Add Activiter {% endblock %}

{% block middle %}
<div class="middle">
    <h1>Ajouter une activitee</h1>
    {{ form_start(form,{'attr': {'novalidate':'novalidate'}} ) }}
    <div class="form-group">

        {{ form_label(form.titre) }}
        {{ form_widget(form.titre) }}
        {{ form_errors (form.titre) }}

    </div>
    <div class="form-group">
        {{ form_label(form.date_debut) }}
        {{ form_widget(form.date_debut) }}
        {{ form_errors (form.date_debut) }}
    </div>
    <div class="form-group">
        {{ form_label(form.date_fin) }}
        {{ form_widget(form.date_fin) }}
        {{ form_errors (form.date_fin) }}
    </div>
    <div class="form-group">
        {{ form_label(form.ref_categ,'sport') }}
        <br>
        {{ form_widget(form.ref_categ) }}
    </div>
    <br>
    <button class="btn btn-primary">
        Ajouter activiter
    </button>

    {{ form_end(form) }}
</div>
{% endblock %}