{% extends 'base.html.twig' %}

{% block title  %} Liste Activités {% endblock %}

{% block middle %}
<div class="middle">
    <h4>List activités</h4>

    <a href="{{path('app_addactiviter_front')}}" class="btn btn-primary" tabindex="-1" role="button">Ajouter activité</a>
    <table class="table table-striped">
        <tr>
            <td>Titre</td>
            <td>Date_debut</td>
            <td>Date_fin</td>
            <td>Action</td>


        </tr>
        {% for i in tabActiviter%}
            <tr>
                <td>{{ i.titre }}</td>
                <td>{{i.datedebut|date("m/d/Y") }}</td>
                <td>{{i.datefin|date("m/d/Y") }}</td>

                <td><a href="{{ path('app_updateactiviter_front',{'id':i.id}) }}"  class="btn btn-primary" tabindex="-1" role="button" >Update</a>
                    <a  href="{{ path('app_removeactiviter',{'id':i.id}) }}"class="btn btn-primary" tabindex="-1" role="button" >delete</a> </td>

                <br>
            </tr>


        {% endfor %}
    </table>
</div>
        {% endblock %}