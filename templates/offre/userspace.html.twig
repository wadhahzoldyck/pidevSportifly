        <div class="stories">
            <div class="story">
                <div class="profile-picture">
                    <img src="{{ asset('frontoffice/images/profile-20.jpg')}}">
                </div>
                <p class="name">Your Story</p>
            </div>
            <div class="story">
                <div class="profile-picture">
                    <img src="{{ asset('frontoffice/images/profile-9.jpg')}}">
                </div>
